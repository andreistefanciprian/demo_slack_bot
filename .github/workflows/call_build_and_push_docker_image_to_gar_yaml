


name: Docker build and push to GAR

permissions:
  contents: read
  id-token: write

on:
  push:
    tags:
      - '*'
    branches:
      - 'main'
    paths:
      - 'requirements.txt'
      - '*.py'
      - '.github/workflows/build_and_push_docker_image_to_gar.yaml'
  pull_request:
    branches: [ 'main' ]
    paths:
      - 'requirements.txt'
      - '*.py'
      - '.github/workflows/build_and_push_docker_image_to_gar.yaml'
  workflow_dispatch:

jobs:
  generate-build-id:
    runs-on: ubuntu-latest
    outputs:
      BUILD_ID: ${{ steps.prep.outputs.BUILD_ID }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Generate build ID
        id: prep
        run: |
          branch=${GITHUB_REF##*/}
          sha=${GITHUB_SHA::8}
          ts=$(date +%s)
          echo "BUILD_ID=${branch}-${sha}-${ts}" >> $GITHUB_OUTPUT

  build-and-push-docker-image-to-gar:
    needs: generate-build-id
    uses: andreistefanciprian/gh-reusable-workflows/.github/workflows/build_and_push_docker_image_to_gar.yaml@main
    with:
      app_name: watchlist-slack-bot
      build_id: ${{ needs.generate-build-id.outputs.BUILD_ID }}
    secrets: inherit


name: docker GAR

on:
  push:
    tags:
      - '*'
    branches:
      - 'main'
    paths:
      - 'requirements.txt'
      - '*.py'
      - '.github/workflows/docker_gar.yaml'
  pull_request:
    branches: [ 'main' ]
    paths:
      - 'requirements.txt'
      - '*.py'
      - '.github/workflows/docker_gar.yaml'
      
  workflow_dispatch:

jobs:
  build-and-push-docker-gar:
    env:
      IMAGE_NAME: ${{ secrets.ARTIFACT_REGISTRY_HOST_NAME }}/${{ secrets.PROJECT_ID }}/${{ secrets.IMAGE_REPO_ID }}/${{ secrets.APP_NAME }}
    runs-on: ubuntu-latest
    permissions:
      contents: 'read'
      id-token: 'write'
    steps:
      - uses: actions/checkout@v3

      - id: auth
        uses: google-github-actions/auth@v1
        name: Authenticate to Google Cloud
        with:
          workload_identity_provider: '${{ secrets.WI_POOL_PROVIDER_ID }}'
          service_account: '${{ secrets.PACKAGER_GSA_ID }}'
          token_format: 'access_token'

      - name: Set up Cloud SDK
        uses: google-github-actions/setup-gcloud@v1
        with:
          version: latest

      - name: Login to GCP Artifact Registry
        run: |
          gcloud auth configure-docker ${{ secrets.ARTIFACT_REGISTRY_HOST_NAME }} --quiet

      - name: Generate build ID
        id: prep
        run: |
            branch=${GITHUB_REF##*/}
            sha=${GITHUB_SHA::8}
            ts=$(date +%s)
            echo "::set-output name=BUILD_ID::${branch}-${sha}-${ts}"  

      - name: Build image
        run: docker build -f infra/Dockerfile . -t ${{ env.IMAGE_NAME }}:${{ steps.prep.outputs.BUILD_ID }}

      - name: Push image
        run: docker push ${{ env.IMAGE_NAME }}:${{ steps.prep.outputs.BUILD_ID }}

      - name: Tag image as latest
        run: gcloud container images add-tag ${{ env.IMAGE_NAME }}:${{ steps.prep.outputs.BUILD_ID }} ${{ env.IMAGE_NAME }}:latest